#!/usr/bin/env python
"""Plot a lightcurve"""
import sys
import enrico.orbitalLC  as orbitalLC
from enrico.config import get_config

try:
    infile = sys.argv[1]
except:
    print('FATAL: Config file not found.')
    sys.exit(1)

config = get_config(infile)
lc = orbitalLC.OrbitalLC(config)
lc.PlotLC()
