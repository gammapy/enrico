#!/usr/bin/env python
"""Query required options and write to a config file"""
import sys
import logging
from enrico.config import query_config

try:
    infile = sys.argv[1]
except:
    logging.error('Config file not found.')
    print('Usage: '+sys.argv[0]+' <output config file name>')
    sys.exit(1)

config = query_config()
config.write(open(sys.argv[1], 'w'))
